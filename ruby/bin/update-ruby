#!/usr/bin/env zsh

# Load
. $DOTFILES/ruby/.zsh/rbenv.zsh

# Install latest ruby
rbenv install 2.4.1

# Update gems
gem update --system
gem update

# Make sure bundler is installed
gem install bundler

# Install gems
bundler install --gemfile=$DOTFILES/Gemfile

# Rehash
rbenv rehash

echo Done updating ruby

