#!/usr/bin/env zsh

# Load
. $DOTFILES/node/.zsh/nvm.zsh

# Install the latest stable verison of node
nvm install node

# Make sure .node-version file is setup
echo $(nvm_ls current | tr -d v) > $DOTFILES/node/.node-version

# Install node modules
pushd $DOTFILES > /dev/null
npm install -g npm
npm install
popd > /dev/null

# Reload NVM
. $DOTFILES/node/.zsh/nvm.zsh

echo Done updating node

